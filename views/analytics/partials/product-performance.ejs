<div id="product-performance" class="section" style="display: none;">
    <!-- Product Overview Metrics -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card dashboard-card">
                <div class="card-body text-center">
                    <i class="fas fa-box fa-2x mb-2 text-primary"></i>
                    <h4 id="total-products">0</h4>
                    <p class="mb-0 text-muted">Total Products</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card dashboard-card">
                <div class="card-body text-center">
                    <i class="fas fa-fire fa-2x mb-2 text-danger"></i>
                    <h4 id="hot-products">0</h4>
                    <p class="mb-0 text-muted">Hot Products</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card dashboard-card">
                <div class="card-body text-center">
                    <i class="fas fa-chart-line fa-2x mb-2 text-success"></i>
                    <h4 id="trending-products">0</h4>
                    <p class="mb-0 text-muted">Trending Products</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card dashboard-card">
                <div class="card-body text-center">
                    <i class="fas fa-exclamation-triangle fa-2x mb-2 text-warning"></i>
                    <h4 id="low-stock-products">0</h4>
                    <p class="mb-0 text-muted">Low Stock Products</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Product Performance Charts -->
    <div class="row mb-4">
        <div class="col-md-6">
            <div class="card dashboard-card">
                <div class="card-header">
                    <h5><i class="fas fa-chart-bar me-2"></i>Sales Distribution by Category</h5>
                </div>
                <div class="card-body">
                    <canvas id="categoryChart"></canvas>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card dashboard-card">
                <div class="card-header">
                    <h5><i class="fas fa-star me-2"></i>Rating Distribution</h5>
                </div>
                <div class="card-body">
                    <canvas id="ratingChart"></canvas>
                </div>
            </div>
        </div>
    </div>

    <!-- Product Ranking Table -->
    <div class="row mb-4">
        <div class="col-md-12">
            <div class="card dashboard-card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5><i class="fas fa-trophy me-2"></i>Top Product Ranking</h5>
                    <div class="btn-group" role="group">
                        <button type="button" class="btn btn-outline-primary btn-sm"
                            id="sort-by-views">By Views</button>
                        <button type="button" class="btn btn-outline-primary btn-sm"
                            id="sort-by-sales">By Sales</button>
                        <button type="button" class="btn btn-outline-primary btn-sm"
                            id="sort-by-revenue">By Revenue</button>
                    </div>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover" id="productTable">
                            <thead>
                                <tr>
                                    <th>Rank</th>
                                    <th>Product Name</th>
                                    <th>Category</th>
                                    <th>Views</th>
                                    <th>Add to Cart</th>
                                    <th>Purchases</th>
                                    <th>Conversion Rate</th>
                                    <th>Revenue</th>
                                    <th>Rating</th>
                                    <th>Stock</th>
                                </tr>
                            </thead>
                            <tbody>
                                <!-- Dynamic Loading -->
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Product Performance Trends -->
    <div class="row mb-4">
        <div class="col-md-12">
            <div class="card dashboard-card">
                <div class="card-header">
                    <h5><i class="fas fa-chart-line me-2"></i>Product Sales Trends</h5>
                </div>
                <div class="card-body">
                    <canvas id="productTrendChart" height="200"></canvas>
                </div>
            </div>
        </div>
    </div>
</div>
