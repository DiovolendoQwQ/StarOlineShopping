      const cartItems = document.querySelectorAll('.cart-item');
      console.log('è´­ç‰©è½¦å•†å“æ•°é‡:', cartItems.length);
      
      const deleteButtons = document.querySelectorAll('.remove-btn');
      console.log('åˆ é™¤æŒ‰é’®æ•°é‡:', deleteButtons.length);
      
      // æµ‹è¯•åˆ é™¤å‡½æ•°æ˜¯å¦å¯ç”¨
      if (typeof removeFromCart === 'function') {
        console.log('removeFromCart å‡½æ•°å·²å®šä¹‰');
      } else {
        console.error('removeFromCart å‡½æ•°æœªå®šä¹‰');
      }
      
       deleteButtons.forEach((btn, index) => {
         const dataId = btn.dataset.productId;
         let productId = dataId;
         if (!productId) {
           const onclickAttr = btn.getAttribute('onclick') || '';
           const m = onclickAttr.match(/removeFromCart\('([^']+)'\)/);
           if (m) productId = m[1];
         }
         btn.removeAttribute('onclick');
         if (productId) {
