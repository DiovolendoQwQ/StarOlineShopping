<body>
  <div class="page-container">
    <!-- È°∂ÈÉ®ÂØºËà™Ê†è -->
    <div class="banner_x">
      <div class="center">
        <div class="header-content">
          <div class="logo-section">
            <a href="/homepage">
              <div class="logo fl"></div>
            </a>
            <div class="cart-title"></div>
          </div>
          <a href="/homepage" class="back-home-btn">Back to Home</a>
        </div>
      </div>
    </div>

    <!-- ‰∏ªÂÜÖÂÆπÂå∫ -->
    <div class="main-content">
      <div class="center">
        <% if (items && items.length> 0) { %>
          <div class="cart-container">
            <div class="cart-header">
              <div>Item</div>
              <div>Price</div>
              <div>Quantity</div>
              <div>Subtotal</div>
              <div>Actions</div>
            </div>

            <% items.forEach(item=> { %>
              <div class="cart-item">
                <div class="product-info">
                  <img src="<%= item.image %>" alt="<%= item.name %>" class="product-image">
                  <div class="product-name">
                    <%= item.name %>
                  </div>
                </div>
                <div class="product-price">¬•<%= item.price %>
                </div>
                <div class="quantity-control">
                  <button class="quantity-btn" onclick="updateQuantity('<%= item.product_id %>', -1)">-</button>
                  <input class="quantity-input" type="number" value="<%= item.quantity %>" min="1"
                    onchange="updateQuantity('<%= item.product_id %>', this.value, true)">
                  <button class="quantity-btn" onclick="updateQuantity('<%= item.product_id %>', 1)">+</button>
                </div>
                <div class="subtotal">¬•<%= (item.price * item.quantity).toFixed(2) %>
                </div>
                <div>
                  <% if (item.product_id) { %>
                    <button class="remove-btn" data-product-id="<%= item.product_id %>"
                      onclick="removeFromCart('<%= item.product_id %>')">Remove</button>
                    <% } else { %>
                      <span>Product ID not found</span>
                      <% } %>
                </div>
              </div>
              <% }); %>
          </div>
          <% } else { %>
            <div class="empty-cart">
              <div class="empty-cart-icon">üõí</div>
              <div class="empty-cart-title">Your cart is empty</div>
              <div class="empty-cart-subtitle">Start shopping and add your favorite items!</div>
              <a href="/products" class="continue-shopping">Continue Shopping</a>
            </div>
            <% } %>

              <% if (items && items.length> 0) { %>
                <div class="checkout-section">
                  <div class="checkout-header">
                    <div class="checkout-info">
                      <a href="/products" class="continue-shopping-link">Continue Shopping</a>
                      <span class="item-count">
                        <%= items.length %> items
                      </span>
                    </div>
                  </div>
                  <div class="checkout-total">
                    <div>
                      <span class="total-label">Total (excl. shipping):</span>
                      <span class="total-amount">¬•<%= totalPrice.toFixed(2) %></span>
                    </div>
                    <button class="checkout-btn" onclick="checkout()">Checkout</button>
                  </div>
                </div>
                <% } %>
      </div>
    </div>
    <div id="delete-overlay"></div>
    <div id="delete-modal" role="dialog" aria-hidden="true">
      <h3>Remove this item?</h3>
      <p>This action cannot be undone.</p>
      <div class="buttons">
        <button id="delete-cancel" type="button">Cancel</button>
        <button id="delete-confirm" type="button">Confirm Remove</button>
