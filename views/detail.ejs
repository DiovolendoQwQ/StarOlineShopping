<!DOCTYPE html>
<html lang="zh-CN">

<head>
  <meta charset="UTF-8">
  <title>
    <%= product.name %> - StarShopping
  </title>
  <link rel="stylesheet" type="text/css" href="/css/style.css">
  <style>
    * {
      box-sizing: border-box;
    }

    body {
      margin: 0;
      padding: 0;
      font-family: "Helvetica Neue", Helvetica, Arial, "PingFang SC", "Hiragino Sans GB", "Microsoft YaHei", sans-serif;
      font-size: 14px;
      color: #333;
      line-height: 1.6;
      background: #f8f9fa;
    }

    header,
    footer {
      padding: 10px 0;
      background: #fff;
      font-size: 12px;
      box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    }

    .w {
      width: 1200px;
      margin: 0 auto;
      box-sizing: border-box;
    }

    .top {
      display: flex;
      justify-content: space-between;
      align-items: center;
    }

    .top ul {
      list-style: none;
      margin: 0;
      padding: 0;
      display: flex;
    }

    .top ul li {
      margin: 0 8px;
    }

    .top ul li a {
      text-decoration: none;
      color: #333;
      transition: color 0.3s ease;
    }

    .top ul li a:hover {
      color: #f60;
    }



    /* 返回按钮 */
    .back-button {
      position: fixed;
      top: 20px;
      left: 20px;
      background: #f60;
      color: #fff;
      border: none;
      padding: 12px 20px;
      border-radius: 25px;
      cursor: pointer;
      font-size: 14px;
      font-weight: 500;
      box-shadow: 0 4px 12px rgba(255, 102, 0, 0.3);
      transition: all 0.3s ease;
      z-index: 1000;
    }

    .back-button:hover {
      background: #e65c00;
      transform: translateY(-2px);
      box-shadow: 0 6px 16px rgba(255, 102, 0, 0.4);
    }

    /* 购物车动画和弹窗 */
    .cart-notification {
      position: fixed;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%) scale(0);
      background: #fff;
      border-radius: 16px;
      box-shadow: 0 20px 40px rgba(0, 0, 0, 0.15);
      padding: 40px;
      text-align: center;
      z-index: 10000;
      opacity: 0;
      transition: all 0.3s cubic-bezier(0.34, 1.56, 0.64, 1);
      max-width: 400px;
      width: 90%;
    }

    .cart-notification.show {
      opacity: 1;
      transform: translate(-50%, -50%) scale(1);
    }

    .cart-notification .icon {
      width: 80px;
      height: 80px;
      background: linear-gradient(135deg, #4CAF50, #45a049);
      border-radius: 50%;
      margin: 0 auto 20px;
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 40px;
      color: #fff;
      animation: bounce 0.6s ease;
    }

    @keyframes bounce {

      0%,
      20%,
      53%,
      80%,
      100% {
        transform: translate3d(0, 0, 0);
      }

      40%,
      43% {
        transform: translate3d(0, -20px, 0);
      }

      70% {
        transform: translate3d(0, -10px, 0);
      }

      90% {
        transform: translate3d(0, -4px, 0);
      }
    }

    .cart-notification h3 {
      margin: 0 0 10px;
      font-size: 24px;
      color: #333;
      font-weight: 600;
    }

    .cart-notification p {
      margin: 0 0 30px;
      color: #666;
      font-size: 16px;
      line-height: 1.5;
    }

    .cart-notification .buttons {
      display: flex;
      gap: 15px;
      justify-content: center;
    }

    .cart-notification button {
      padding: 12px 24px;
      border: none;
      border-radius: 8px;
      cursor: pointer;
      font-size: 14px;
      font-weight: 500;
      transition: all 0.3s ease;
      min-width: 120px;
    }

    .cart-notification .btn-primary {
      background: #f60;
      color: #fff;
    }

    .cart-notification .btn-primary:hover {
      background: #e65c00;
      transform: translateY(-2px);
    }

    .cart-notification .btn-secondary {
      background: #f8f9fa;
      color: #666;
      border: 1px solid #ddd;
    }

    .cart-notification .btn-secondary:hover {
      background: #e9ecef;
      color: #333;
    }

    .overlay {
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: rgba(0, 0, 0, 0.5);
      z-index: 9999;
      opacity: 0;
      visibility: hidden;
      transition: all 0.3s ease;
    }

    .overlay.show {
      opacity: 1;
      visibility: visible;
    }

    /* 加入购物车按钮动画 */
    .add-to-cart-btn {
      position: relative;
      overflow: hidden;
    }

    .add-to-cart-btn::before {
      content: '';
      position: absolute;
      top: 50%;
      left: 50%;
      width: 0;
      height: 0;
      background: rgba(255, 255, 255, 0.3);
      border-radius: 50%;
      transform: translate(-50%, -50%);
      transition: width 0.6s, height 0.6s;
    }

    .add-to-cart-btn.clicked::before {
      width: 300px;
      height: 300px;
    }

    .loading-spinner {
      display: none;
      width: 20px;
      height: 20px;
      border: 2px solid #ffffff;
      border-top: 2px solid transparent;
      border-radius: 50%;
      animation: spin 1s linear infinite;
      margin-right: 8px;
    }

    @keyframes spin {
      0% {
        transform: rotate(0deg);
      }

      100% {
        transform: rotate(360deg);
      }
    }

    .add-to-cart-btn.loading::after {
      content: '';
      display: inline-block;
      width: 16px;
      height: 16px;
      border: 2px solid #ffffff;
      border-top: 2px solid transparent;
      border-radius: 50%;
      animation: spin 1s linear infinite;
      margin-left: 8px;
    }

    .add-to-cart-btn.loading {
      pointer-events: none;
    }

    /* 产品详情区 */
    .product-container {
      width: 1200px;
      margin: 80px auto 30px;
      display: flex;
      background: #fff;
      border-radius: 12px;
      box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
      overflow: hidden;
      min-height: 600px;
    }

    .picture-container {
      flex: 1;
      display: flex;
      justify-content: center;
      align-items: center;
      padding: 40px;
      background: #fafafa;
    }

    .picture-container img {
      max-width: 100%;
      max-height: 500px;
      border-radius: 8px;
      box-shadow: 0 8px 24px rgba(0, 0, 0, 0.12);
      transition: transform 0.3s ease;
    }

    .picture-container img:hover {
      transform: scale(1.05);
    }

    .detail-container {
      flex: 1;
      padding: 40px;
      display: flex;
      flex-direction: column;
      justify-content: center;
    }

    .detail-container h1 {
      font-size: 28px;
      margin-bottom: 16px;
      font-weight: 600;
      color: #222;
      line-height: 1.3;
    }

    .detail-container .description {
      margin-bottom: 24px;
      font-size: 15px;
      color: #666;
      line-height: 1.6;
      padding: 16px;
      background: #f8f9fa;
      border-radius: 8px;
      border-left: 4px solid #f60;
    }

    .detail-container .price {
      font-size: 32px;
      color: #f60;
      margin-bottom: 32px;
      font-weight: 700;
      display: flex;
      align-items: baseline;
    }

    .detail-container .price::before {
      content: '¥';
      font-size: 20px;
      margin-right: 4px;
    }

    .detail-container .actions {
      display: flex;
      gap: 16px;
      margin-top: 20px;
    }

    .detail-container .actions input {
      padding: 14px 28px;
      border: none;
      border-radius: 8px;
      cursor: pointer;
      font-size: 15px;
      font-weight: 500;
      transition: all 0.3s ease;
      min-width: 140px;
    }

    .detail-container .actions input:first-child {
      background: #fff;
      color: #f60;
      border: 2px solid #f60;
    }

    .detail-container .actions input:first-child:hover {
      background: #f60;
      color: #fff;
      transform: translateY(-2px);
      box-shadow: 0 6px 16px rgba(255, 102, 0, 0.3);
    }

    .detail-container .actions input:last-child {
      background: #f60;
      color: #fff;
      border: 2px solid #f60;
    }

    .detail-container .actions input:last-child:hover {
      background: #e65c00;
      border-color: #e65c00;
      transform: translateY(-2px);
      box-shadow: 0 6px 16px rgba(230, 92, 0, 0.4);
    }

    footer {
      margin-top: 40px;
      padding: 30px 0;
      font-size: 12px;
      color: #999;
      text-align: center;
      line-height: 1.8;
      background: #fff;
      border-top: 1px solid #eee;
    }

    footer a {
      color: #999;
      text-decoration: none;
      margin: 0 5px;
      transition: color 0.3s ease;
    }

    footer a:hover {
      color: #f60;
    }

    /* 响应式设计 */
    @media (max-width: 1240px) {

      .w,
      .product-container {
        width: 95%;
        margin-left: auto;
        margin-right: auto;
      }
    }

    @media (max-width: 768px) {
      .product-container {
        flex-direction: column;
        margin: 20px auto;
      }

      .picture-container,
      .detail-container {
        padding: 20px;
      }

      .detail-container h1 {
        font-size: 24px;
      }

      .detail-container .price {
        font-size: 28px;
      }

      .detail-container .actions {
        flex-direction: column;
      }

      .nav ul {
        flex-wrap: wrap;
      }

      .nav ul li {
        margin: 5px 10px;
      }
    }

    .tb-card{background:#fff;border-radius:12px;box-shadow:0 6px 18px rgba(0,0,0,.08)}
    .product-container{gap:24px}
    .gallery{width:460px;display:flex;gap:12px}
    .gallery .thumbs{width:68px;display:flex;flex-direction:column;gap:8px}
    .gallery .thumbs img{width:68px;height:68px;object-fit:cover;border:1px solid #eee;border-radius:6px;cursor:pointer}
    .gallery .main-pic{flex:1;background:#fff;border:1px solid #eee;border-radius:8px;display:flex;align-items:center;justify-content:center;padding:16px}
    .gallery .main-pic img{max-width:100%;max-height:420px}

    .detail-container{padding:20px 40px}
    .tb-pricebox{background:#fffaf2;border:1px solid #ffe8cc;border-radius:8px;padding:16px;margin:12px 0}
    .tb-price{font-size:28px;color:#ff5000;font-weight:700}
    .tb-stock{font-size:12px;color:#666;margin-top:8px}

    .tb-sku-row{display:flex;align-items:center;margin:12px 0}
    .tb-sku-title{width:60px;color:#999}
    .tb-sku-options{display:flex;gap:8px}
    .tb-sku-option{padding:8px 12px;border:1px solid #ddd;border-radius:6px;cursor:pointer}
    .tb-sku-option.selected{border-color:#ff6a00;color:#ff6a00;background:#fff2e8}

    .tb-quantity{display:flex;align-items:center;gap:8px}
    .qty-btn{width:28px;height:28px;border:1px solid #ddd;border-radius:4px;background:#fff;cursor:pointer}
    #buyQty{width:50px;height:28px;text-align:center;border:1px solid #ddd;border-radius:4px}

    .tb-actions{display:flex;gap:12px;margin-top:16px}
    .buy-btn{padding:12px 24px;background:#ff6a00;color:#fff;border:none;border-radius:6px;font-size:14px;cursor:pointer;box-shadow:0 4px 12px rgba(255,106,0,.3)}
    .buy-btn:hover{background:#ff5000}
    .cart-btn{padding:12px 24px;background:#ffecec;color:#ff6a00;border:1px solid #ffb199;border-radius:6px;font-size:14px;cursor:pointer}
    .cart-btn:hover{background:#ffd7d7}

    .tb-service{display:flex;gap:16px;font-size:12px;color:#666;margin-top:10px}
  </style>
</head>

<body>




  <!-- 返回按钮 -->
  <button class="back-button" onclick="history.back()">← 返回</button>

  <!-- 购物车通知弹窗 -->
  <div class="overlay" id="overlay"></div>
  <div class="cart-notification" id="cartNotification">
    <div class="icon">✓</div>
    <h3>添加成功！</h3>
    <p>商品已成功添加到购物车</p>
    <div class="buttons">
      <button class="btn-secondary" onclick="closeNotification()">继续购物</button>
      <button class="btn-primary" onclick="window.location.href='/cart'">查看购物车</button>
    </div>
  </div>

  <!-- 产品详情 -->
  <div class="product-container tb-card">
    <div class="gallery">
      <div class="main-pic">
        <img id="mainImage" src="/<%= product.image %>" alt="<%= product.name %>">
      </div>
    </div>
    <div class="detail-container">
      <h1><%= product.name %></h1>
      <div class="description"><%= product.description %></div>
      <div class="tb-pricebox">
        <div class="tb-price">¥<%= product.price %></div>
        <% if (typeof product.stock !== 'undefined') { %>
          <div class="tb-stock"><%= product.stock > 0 ? '现货' : '缺货' %> | 库存：<%= product.stock %></div>
        <% } %>
      </div>
      <div class="tb-sku">
        <div class="tb-sku-row">
          <div class="tb-sku-title">规格</div>
          <div class="tb-sku-options">
            <span class="tb-sku-option selected">默认</span>
          </div>
        </div>
        <div class="tb-sku-row">
          <div class="tb-sku-title">数量</div>
          <div class="tb-quantity">
            <button class="qty-btn minus" type="button">-</button>
            <input type="number" id="buyQty" min="1" value="1">
            <button class="qty-btn plus" type="button">+</button>
            <% if (typeof product.stock !== 'undefined') { %>
              <span class="tb-qty-stock">库存 <%= product.stock %> 件</span>
            <% } %>
          </div>
        </div>
      </div>
      <div class="tb-actions">
        <button class="buy-btn" data-product-id="<%= product.id %>">立即购买</button>
        <button class="cart-btn add-to-cart-btn" data-product-id="<%= product.id %>">加入购物车</button>
      </div>
      <ul class="tb-service">
        <li>正品保证</li>
        <li>七天无理由</li>
        <li>极速发货</li>
      </ul>
    </div>
  </div>

  <!-- footer -->

  <script>
    // 显示购物车通知弹窗
    function showCartNotification() {
      const overlay = document.getElementById('overlay');
      const notification = document.getElementById('cartNotification');

      overlay.classList.add('show');
      notification.classList.add('show');

      // 3秒后自动关闭
      setTimeout(() => {
        closeNotification();
      }, 3000);
    }

    // 关闭通知弹窗
    function closeNotification() {
      const overlay = document.getElementById('overlay');
      const notification = document.getElementById('cartNotification');

      overlay.classList.remove('show');
      notification.classList.remove('show');
    }

    // 显示错误通知
    function showErrorNotification(message) {
      const notification = document.getElementById('cartNotification');
      const icon = notification.querySelector('.icon');
      const title = notification.querySelector('h3');
      const text = notification.querySelector('p');

      // 修改为错误样式
      icon.innerHTML = '✕';
      icon.style.background = 'linear-gradient(135deg, #f44336, #d32f2f)';
      title.textContent = '添加失败';
      text.textContent = message;

      showCartNotification();

      // 恢复原样式
      setTimeout(() => {
        icon.innerHTML = '✓';
        icon.style.background = 'linear-gradient(135deg, #4CAF50, #45a049)';
        title.textContent = '添加成功！';
        text.textContent = '商品已成功添加到购物车';
      }, 3000);
    }

    // 添加商品到购物车的函数
    async function addToCart(productId, quantity = 1) {
      const button = document.querySelector('.add-to-cart-btn');
      const spinner = document.querySelector('.loading-spinner');

      try {
        // 添加点击动画效果
        button.classList.add('clicked');
        button.classList.add('loading');

        // 移除点击动画
        setTimeout(() => {
          button.classList.remove('clicked');
        }, 600);

        const response = await fetch('/cart/add', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
          },
          body: JSON.stringify({
            productId: productId,
            quantity: quantity
          })
        });

        button.classList.remove('loading');

        if (response.ok) {
          showCartNotification();
        } else if (response.status === 401) {
          showErrorNotification('请先登录后再添加商品到购物车');
          setTimeout(() => {
            window.location.href = '/login.html';
          }, 2000);
        } else {
          const error = await response.text();
          showErrorNotification('添加到购物车失败：' + error);
        }
      } catch (error) {
        button.classList.remove('loading');
        console.error('添加到购物车时发生错误:', error);
        showErrorNotification('网络错误，请稍后重试');
      }
    }

    // 页面加载完成后添加事件监听器
    document.addEventListener('DOMContentLoaded', function () {
      const addToCartButton = document.querySelector('.add-to-cart-btn');
      const overlay = document.getElementById('overlay');

      if (addToCartButton) {
        addToCartButton.addEventListener('click', function () {
          const productId = this.getAttribute('data-product-id');
          const qtyInput = document.getElementById('buyQty');
          const qty = qtyInput ? Math.max(1, parseInt(qtyInput.value || '1', 10)) : 1;
          if (productId) {
            addToCart(productId, qty);
          }
        });
      }
      const buyNowButton = document.querySelector('.buy-btn');
      if (buyNowButton) {
        buyNowButton.addEventListener('click', async function () {
          const productId = this.getAttribute('data-product-id');
          const qtyInput = document.getElementById('buyQty');
          const qty = qtyInput ? Math.max(1, parseInt(qtyInput.value || '1', 10)) : 1;
          try {
            await addToCart(productId, qty);
            window.location.href = '/cart';
          } catch (e) {}
        });
      }
      const qtyInput = document.getElementById('buyQty');
      const minusBtn = document.querySelector('.qty-btn.minus');
      const plusBtn = document.querySelector('.qty-btn.plus');
      if (qtyInput && minusBtn && plusBtn) {
        minusBtn.addEventListener('click', function () {
          qtyInput.value = Math.max(1, parseInt(qtyInput.value || '1', 10) - 1);
        });
        plusBtn.addEventListener('click', function () {
          qtyInput.value = Math.max(1, parseInt(qtyInput.value || '1', 10) + 1);
        });
      }
      const thumb = document.querySelector('.gallery .thumbs img');
      const main = document.getElementById('mainImage');
      if (thumb && main) {
        thumb.addEventListener('click', function(){ main.src = this.src; });
      }

      // 点击遮罩层关闭弹窗
      if (overlay) {
        overlay.addEventListener('click', closeNotification);
      }

      // ESC键关闭弹窗
      document.addEventListener('keydown', function (e) {
        if (e.key === 'Escape') {
          closeNotification();
        }
      });
    });
  </script>
</body>

</html>