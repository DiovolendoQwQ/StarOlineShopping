  <style>
    * {
      box-sizing: border-box;
    }

    body {
      margin: 0;
      padding: 0;
      font-family: "Helvetica Neue", Helvetica, Arial, "PingFang SC", "Hiragino Sans GB", "Microsoft YaHei", sans-serif;
      font-size: 14px;
      color: #333;
      line-height: 1.6;
      background: #f8f9fa;
    }

    header,
    footer {
      padding: 10px 0;
      background: #fff;
      font-size: 12px;
      box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    }

    .w {
      width: 1200px;
      margin: 0 auto;
      box-sizing: border-box;
    }

    .top {
      display: flex;
      justify-content: space-between;
      align-items: center;
    }

    .top ul {
      list-style: none;
      margin: 0;
      padding: 0;
      display: flex;
    }

    .top ul li {
      margin: 0 8px;
    }

    .top ul li a {
      text-decoration: none;
      color: #333;
      transition: color 0.3s ease;
    }

    .top ul li a:hover {
      color: #f60;
    }



    /* 返回按钮（置于 logo 下方） */
    .back-button {
      position: static;
      background: #f60;
      color: #fff;
      border: none;
      padding: 12px 20px;
      border-radius: 25px;
      cursor: pointer;
      font-size: 14px;
      font-weight: 500;
      box-shadow: 0 4px 12px rgba(255, 102, 0, 0.3);
      transition: all 0.3s ease;
      margin-top: 8px;
      display: inline-block;
    }

    .back-button:hover {
      background: #e65c00;
      transform: translateY(-2px);
      box-shadow: 0 6px 16px rgba(255, 102, 0, 0.4);
    }

    /* 购物车动画和弹窗 */
    .cart-notification {
      position: fixed;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%) scale(0);
      background: #fff;
      border-radius: 16px;
      box-shadow: 0 20px 40px rgba(0, 0, 0, 0.15);
      padding: 40px;
      text-align: center;
      z-index: 10000;
      opacity: 0;
      transition: all 0.3s cubic-bezier(0.34, 1.56, 0.64, 1);
      max-width: 400px;
      width: 90%;
    }

    .cart-notification.show {
      opacity: 1;
      transform: translate(-50%, -50%) scale(1);
    }

    .cart-notification .icon {
      width: 80px;
      height: 80px;
      background: linear-gradient(135deg, #4CAF50, #45a049);
      border-radius: 50%;
      margin: 0 auto 20px;
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 40px;
      color: #fff;
      animation: bounce 0.6s ease;
    }

    @keyframes bounce {

      0%,
      20%,
      53%,
      80%,
      100% {
        transform: translate3d(0, 0, 0);
      }

      40%,
      43% {
        transform: translate3d(0, -20px, 0);
      }

      70% {
        transform: translate3d(0, -10px, 0);
      }

      90% {
        transform: translate3d(0, -4px, 0);
      }
    }

    .cart-notification h3 {
      margin: 0 0 10px;
      font-size: 24px;
      color: #333;
      font-weight: 600;
    }

    .cart-notification p {
      margin: 0 0 30px;
      color: #666;
      font-size: 16px;
      line-height: 1.5;
    }

    .cart-notification .buttons {
      display: flex;
      gap: 15px;
      justify-content: center;
    }

    .cart-notification button {
      padding: 12px 24px;
      border: none;
      border-radius: 8px;
      cursor: pointer;
      font-size: 14px;
      font-weight: 500;
      transition: all 0.3s ease;
      min-width: 120px;
    }

    .cart-notification .btn-primary {
      background: #f60;
      color: #fff;
    }

    .cart-notification .btn-primary:hover {
      background: #e65c00;
      transform: translateY(-2px);
    }

    .cart-notification .btn-secondary {
      background: #f8f9fa;
      color: #666;
      border: 1px solid #ddd;
    }

    .cart-notification .btn-secondary:hover {
      background: #e9ecef;
      color: #333;
    }

    .overlay {
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: rgba(0, 0, 0, 0.5);
      z-index: 9999;
      opacity: 0;
      visibility: hidden;
      transition: all 0.3s ease;
    }

    .overlay.show {
      opacity: 1;
      visibility: visible;
    }

    /* 加入购物车按钮动画 */
    .add-to-cart-btn {
      position: relative;
      overflow: hidden;
    }

    .add-to-cart-btn::before {
      content: '';
      position: absolute;
      top: 50%;
      left: 50%;
      width: 0;
      height: 0;
      background: rgba(255, 255, 255, 0.3);
      border-radius: 50%;
      transform: translate(-50%, -50%);
      transition: width 0.6s, height 0.6s;
    }

    .add-to-cart-btn.clicked::before {
      width: 300px;
      height: 300px;
    }

    .loading-spinner {
      display: none;
      width: 20px;
      height: 20px;
      border: 2px solid #ffffff;
      border-top: 2px solid transparent;
      border-radius: 50%;
      animation: spin 1s linear infinite;
      margin-right: 8px;
    }

    @keyframes spin {
      0% {
        transform: rotate(0deg);
      }

      100% {
        transform: rotate(360deg);
      }
    }

    .add-to-cart-btn.loading::after {
      content: '';
      display: inline-block;
      width: 16px;
      height: 16px;
      border: 2px solid #ffffff;
      border-top: 2px solid transparent;
      border-radius: 50%;
      animation: spin 1s linear infinite;
      margin-left: 8px;
    }

    .add-to-cart-btn.loading {
      pointer-events: none;
    }

    /* 产品详情区 */
    .product-container {
      width: 1200px;
      margin: 80px auto 30px;
      display: flex;
      background: #fff;
      border-radius: 12px;
      box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
      overflow: hidden;
      min-height: 600px;
    }

    .picture-container {
      flex: 1;
      display: flex;
      justify-content: center;
      align-items: center;
      padding: 40px;
      background: #fafafa;
    }

    .picture-container img {
      max-width: 100%;
      max-height: 500px;
      border-radius: 8px;
      box-shadow: 0 8px 24px rgba(0, 0, 0, 0.12);
      transition: transform 0.3s ease;
    }

    .picture-container img:hover {
      transform: scale(1.05);
    }

    .detail-container {
      flex: 1;
      padding: 40px;
      display: flex;
      flex-direction: column;
      justify-content: center;
    }

    .detail-container h1 {
      font-size: 28px;
      margin-bottom: 16px;
      font-weight: 600;
      color: #222;
      line-height: 1.3;
    }

    .detail-container .description {
      margin-bottom: 24px;
      font-size: 15px;
      color: #666;
      line-height: 1.6;
      padding: 16px;
      background: #f8f9fa;
      border-radius: 8px;
      border-left: 4px solid #f60;
    }

    .detail-container .price {
      font-size: 32px;
      color: #f60;
      margin-bottom: 32px;
      font-weight: 700;
      display: flex;
      align-items: baseline;
    }

    .detail-container .price::before {
      content: '¥';
      font-size: 20px;
      margin-right: 4px;
    }

    .detail-container .actions {
      display: flex;
      gap: 16px;
      margin-top: 20px;
    }

    .detail-container .actions input {
      padding: 14px 28px;
      border: none;
      border-radius: 8px;
      cursor: pointer;
      font-size: 15px;
      font-weight: 500;
      transition: all 0.3s ease;
      min-width: 140px;
    }

    .detail-container .actions input:first-child {
      background: #fff;
      color: #f60;
      border: 2px solid #f60;
    }

    .detail-container .actions input:first-child:hover {
      background: #f60;
      color: #fff;
      transform: translateY(-2px);
      box-shadow: 0 6px 16px rgba(255, 102, 0, 0.3);
    }

    .detail-container .actions input:last-child {
      background: #f60;
      color: #fff;
      border: 2px solid #f60;
    }

    .detail-container .actions input:last-child:hover {
      background: #e65c00;
      border-color: #e65c00;
      transform: translateY(-2px);
      box-shadow: 0 6px 16px rgba(230, 92, 0, 0.4);
    }

    footer {
      margin-top: 40px;
      padding: 30px 0;
      font-size: 12px;
      color: #999;
      text-align: center;
      line-height: 1.8;
      background: #fff;
      border-top: 1px solid #eee;
    }

    footer a {
      color: #999;
      text-decoration: none;
      margin: 0 5px;
      transition: color 0.3s ease;
    }

    footer a:hover {
      color: #f60;
    }

    /* 响应式设计 */
    @media (max-width: 1240px) {

      .w,
      .product-container {
        width: 95%;
        margin-left: auto;
        margin-right: auto;
      }
    }

    @media (max-width: 768px) {
      .product-container {
        flex-direction: column;
        margin: 20px auto;
      }

      .picture-container,
      .detail-container {
        padding: 20px;
      }

      .detail-container h1 {
        font-size: 24px;
      }

      .detail-container .price {
        font-size: 28px;
      }

      .detail-container .actions {
        flex-direction: column;
      }

      .nav ul {
        flex-wrap: wrap;
      }

      .nav ul li {
        margin: 5px 10px;
      }
    }

